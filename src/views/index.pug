extends ./_partials/layout.pug

block vars
  - bodyClass = 'index'

block main

  main

    .main-container(data-component="map-detail-view")

      +filter()

      .main-content(data-component="list-view-container")

        .main-content-top-bar
          a.icon-container.icon-back(href="#")
            <svg xmlns="http://www.w3.org/2000/svg" width="19.245" height="28" viewBox="0 0 19.245 28"><defs><style>.a{fill:#1a1818;}</style></defs><g transform="translate(-634.499 -538.828)"><path class="a" d="M645.238,566.828l-10.739-14,10.739-14"/><rect class="a" width="10.158" height="10.158" transform="translate(643.586 547.749)"/></g></svg>
            span.icon-text Zpět

        div(data-component="list-view")

          h1.title Julius Fučík – místa paměti Praha

          .cards-container

            each objekt in objekty

              article.card(data-component="card")

                .layer-bar
                  .meta.meta-category #{objekt.layer}

                .card-content-container
                  .gallery
                    .gallery-nav
                      .prev
                      .next
                    .gallery-image
                      img(src="assets/images/dummy/object-dummy-image.jpg")

                  .card-content
                    .title-bar
                      .card-title #{objekt.name}
                      .icons
                        <svg class="icon icon-action" xmlns="http://www.w3.org/2000/svg" width="12.871" height="19.793" viewBox="0 0 12.871 19.793">
                          <g transform="translate(-132.331 -89.309)" fill="none">
                            <path d="M138.766,102.888l.172.166L145.2,109.1V89.309H132.331V109.1l6.263-6.047Z" stroke="black"/>
                          </g>
                        </svg>
                    .footer-bar
                      .meta.meta-address #{objekt.address}
                      .icons
                        img(src="assets/images/icons/icon-document.svg")


      .map(id="mapbox" data-component="mapbox")

      .view-switch(data-component="view-switch")
        .heading Zobrazeni:
        nav
          a(href="#").item Položka
          a(href="#").item Položka
          a(href="#").item Položka
          a(href="#").item Položka
